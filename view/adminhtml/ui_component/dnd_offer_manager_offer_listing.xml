<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">dnd_offer_manager_offer_listing.dnd_offer_manager_offer_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <buttons>
            <button name="add">
                <url path="*/*/create"/>
                <class>primary</class>
                <label translate="true">Add New Offer</label>
                <aclResource>Dnd_OfferManager::offers_create</aclResource>
            </button>
        </buttons>
        <spinner>dnd_offer_manager_offer_columns</spinner>
        <deps>
            <dep>dnd_offer_manager_offer_listing.dnd_offer_manager_offer_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="dnd_offer_manager_offer_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">offer_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>Dnd_OfferManager::offers</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="dnd_offer_manager_offer_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>offer_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete selected offers?</message>
                        <title translate="true">Delete Offers</title>
                    </confirm>
                    <url path="offermanager/offer/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="dnd_offer_manager_offer_columns">
        <settings>
            <editorConfig>
                <param name="clientConfig" xsi:type="array">
                    <item name="saveUrl" xsi:type="url" path="offermanager/offer/inlineEdit"/>
                    <item name="validateBeforeSave" xsi:type="boolean">false</item>
                </param>
                <param name="indexField" xsi:type="string">offer_id</param>
                <param name="enabled" xsi:type="boolean">true</param>
                <param name="selectProvider" xsi:type="string">dnd_offer_manager_offer_listing.dnd_offer_manager_offer_listing.dnd_offer_manager_offer_columns.ids</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">dnd_offer_manager_offer_listing.dnd_offer_manager_offer_listing.dnd_offer_manager_offer_columns_editor</item>
                    <item name="target" xsi:type="string">startEdit</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">${ $.$data.rowIndex }</item>
                        <item name="1" xsi:type="boolean">true</item>
                    </item>
                </param>
            </childDefaults>
        </settings>
        <selectionsColumn name="ids">
            <settings>
                <indexField>offer_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="offer_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>
        <column name="description">
            <settings>
                <filter>text</filter>
                <label translate="true">Description</label>
            </settings>
        </column>
        <column name="label">
            <settings>
                <filter>text</filter>
                <label translate="true">Label</label>
            </settings>
        </column>
        <column name="image">
            <settings>
                <filter>text</filter>
                <label translate="true">Image</label>
            </settings>
        </column>
        <column name="redirect_url">
            <settings>
                <filter>text</filter>
                <label translate="true">Redirect URL</label>
            </settings>
        </column>
        <column name="start_date" class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Start Date</label>
            </settings>
        </column>
        <column name="end_date" class="Magento\Ui\Component\Listing\Columns\Date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">End Date</label>
            </settings>
        </column>
        <column name="category_names" class="Dnd\OfferManager\Ui\Component\Listing\Column\Categories">
            <settings>
                <filter>text</filter>
                <label translate="true">Categories</label>
                <sortable>false</sortable>
            </settings>
        </column>
        <actionsColumn name="actions" class="Dnd\OfferManager\Ui\Component\Listing\Column\Actions">
            <settings>
                <indexField>offer_id</indexField>
                <resizeEnabled>false</resizeEnabled>
                <resizeDefaultWidth>107</resizeDefaultWidth>
            </settings>
        </actionsColumn>

    </columns>
</listing>
